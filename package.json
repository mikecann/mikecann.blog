    "react-use-scroll-position": "^2.0.0",
    "rehype-raw": "^7.0.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "resend": "^4.5.1",
    "rss": "^1.2.2",
    "typestyle": "^2.4.0",
    "zod": "^3.24.4"
  },
