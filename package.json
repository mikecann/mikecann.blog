{
  "name": "next-mikecann",
  "version": "0.2.0",
  "private": true,
  "engines": {
    "node": "20"
  },
  "scripts": {
    "dev": "concurrently --names \"next,convex\" --prefix-colors \"cyan,magenta\" \"bun run dev:next\" \"bun run dev:convex\"",
    "dev:next": "next dev",
    "dev:convex": "convex dev",
    "build": "bun run populateAlgolia && bun run generateRSS && bun run convex deploy --check-build-environment=disable && next build",
    "start": "next start",
    "dev:ts": "tsc --noEmit -w",
    "generateRSS": "bun run script ./scripts/generateRSS.ts",
    "uploadsPostsToOpenAIStorage": "bun run script ./scripts/openai/uploadPostsToStorage.ts",
    "populateAlgolia": "bun run script ./scripts/populateAlgolia.ts",
    "checkLinks": "bun run blc http://localhost:3000 -ro --exclude https://www.linkedin.com/in/mikecann",
    "compress:all:lossless": "optimizt --lossless ./public",
    "compress:one:lossless": "optimizt --lossless ./public/posts/battletabs-enters-soft-launch",
    "compress:one:webp": "optimizt --webp ./public/posts/homework-is-dumb",
    "test": "vitest"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "@artsy/fresnel": "^8.1.0",
    "@convex-dev/agent": "^0.1.5-alpha.3",
    "@convex-dev/agent-playground": "^0.0.12",
    "@funboxteam/optimizt": "^5.0.2",
    "@types/isomorphic-fetch": "^0.0.39",
    "@types/node-fetch": "^2.6.12",
    "@types/ramda": "^0.30.2",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/rss": "^0.0.32",
    "@vercel/analytics": "^1.5.0",
    "ai": "^4.3.15",
    "algoliasearch": "^5.24.0",
    "convex": "^1.24.6",
    "convex-helpers": "^0.1.89",
    "cross-env": "^7.0.3",
    "csstips": "^1.2.0",
    "csx": "^10.0.2",
    "date-fns": "^4.1.0",
    "fp-ts": "^2.16.10",
    "gls": "^3.0.1",
    "gray-matter": "^4.0.3",
    "image-size": "^2.0.2",
    "io-ts": "^2.2.22",
    "isomorphic-fetch": "^3.0.0",
    "ldrs": "^1.1.7",
    "next": "^15.3.2",
    "node-fetch": "^3.3.2",
    "openai": "^4.97.0",
    "posthog-js": "^1.240.4",
    "ramda": "^0.30.1",
    "react": "19.1.0",
